<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoreInformation"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/majan_woman"
        android:layout_weight="3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="화료 방법"
            android:textAlignment="center"
            android:textSize="25sp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <RadioButton
                android:id="@+id/tsumo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="쯔모" />

            <RadioButton
                android:id="@+id/ron"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="론" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="리치 여부"
            android:textAlignment="center"
            android:textSize="25sp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <RadioButton
                android:id="@+id/noRichi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="없음" />

            <RadioButton
                android:id="@+id/richi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="리치" />

            <RadioButton
                android:id="@+id/doubleRichi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="더블 리치" />
        </RadioGroup>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="장풍패"
            android:textAlignment="center"
            android:textSize="25sp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <RadioButton
                android:id="@+id/prevailWindEast"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="동" />
            <RadioButton
                android:id="@+id/prevailWindSouth"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="남" />
            <RadioButton
                android:id="@+id/prevailWindWest"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="서" />
            <RadioButton
                android:id="@+id/prevailWindNorth"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="북" />
        </RadioGroup>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="자풍패"
            android:textAlignment="center"
            android:textSize="25sp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <RadioButton
                android:id="@+id/selfWindEast"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="동" />
            <RadioButton
                android:id="@+id/selfWindSouth"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="남" />
            <RadioButton
                android:id="@+id/selfWindWest"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="서" />
            <RadioButton
                android:id="@+id/selfWindNorth"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="북" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="특수화료"
            android:textAlignment="center"
            android:textSize="25sp"
            />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <RadioButton
                android:id="@+id/changKkang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="창깡" />

            <RadioButton
                android:id="@+id/youngSangGaeHwa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="영상개화" />

            <RadioButton
                android:id="@+id/haJeoh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="하저/해저" />
        </RadioGroup>


    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        android:layout_gravity="center"
        android:id="@+id/post_btn"/>
</LinearLayout>